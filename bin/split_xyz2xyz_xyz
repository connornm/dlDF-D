#!/bin/bash
# Splits an xyz file in to two files
# Usage:
#	./split_xyz2xyz_xyz  in_system linenumber out_system1 out_system2

in=data/xyz/"${1}".xyz
n=${2}
out1=data/xyz/"${3}".xyz
out2=data/xyz/"${4}".xyz
tot=$(($(wc -l "${in}" | sed s!"${in}"!!)-2))
echo "${n}" > ${out1}
echo "$((${tot}-${n}))" > ${out2}
echo ${3} >> ${out1}
echo ${4} >> ${out2}

cat "${in}" | sed '1,2d' | sed "$((${n}+1))","${tot}"d >> "${out1}"
cat "${in}" | sed '1,2d' | sed  1,"${n}"d >> "${out2}"

